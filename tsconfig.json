{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false,
    "lib": ["es5", "dom"],
    "moduleResolution": "node",
    // "outDir": "./lib/assets/javascripts"
    "outDir": "output"
  },
  "files": [
    "./lib/assets/typescripts/transpiler.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
